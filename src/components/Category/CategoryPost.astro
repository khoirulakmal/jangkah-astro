---
import Post from '../Post/Post.astro'
const {title, post1, post2, post3} = Astro.props;
---

<div class="flex flex-col justify-center items-center border-[1px] px-2 md:px-10 border-white shadow-xl">
    <h1 class="font-tangerine text-brown text-5xl lg:text-9xl ">{title}</h1>
    <div class="flex flex-col space-y-5 py-5 w-full md:w-60">
        <Post title={post1.title} author={post1.author} />
        <Post title={post2.title} author={post2.author} />
        <Post title={post3.title} author={post3.author} />
    </div>
</div>