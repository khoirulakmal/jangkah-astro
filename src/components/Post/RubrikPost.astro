---
const {title, author} = Astro.props;
---

<article class="flex flex-col">
    <a rel="noopener noreferrer" href="#" aria-label="Te nulla oportere reprimique his dolorum">
        <img alt="" class="object-cover w-full h-52 dark:bg-gray-500" src="https://images.unsplash.com/photo-1518070588484-2b53926cba76?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80">
    </a>
    <div class="flex flex-col flex-1 p-6 font-raleway">
        <a rel="noopener noreferrer" href="article" aria-label="Te nulla oportere reprimique his dolorum"></a>
        <a rel="noopener noreferrer" href="/article" class="text-xs tracki uppercase hover:underline dark:text-violet-400">{author}</a>
        <a href="/article">
        <h3 class="flex-1 py-2 text-lg font-semibold leading-2 group">
            <span class='bg-left-bottom bg-gradient-to-r from-brown to-brown bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-[3000ms] ease-out'>
            {title}
            </span>
        </h3>
        </a>
    </div>
</article>