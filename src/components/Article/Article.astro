<script>
window.addEventListener('scroll', function() {
  var contentSection = document.getElementById('article-section');
  var fixedElement = document.getElementById('share');
  var sections = document.getElementsByTagName('section');

  // Get the position of the content section
  var contentSectionPosition = contentSection.getBoundingClientRect();

  // Counter for visible sections
  var visibleSectionCount = 0;

  // Loop through each section and check if it's in view
  for (var i = 0; i < sections.length; i++) {
    var sectionPosition = sections[i].getBoundingClientRect();
    
    if (sectionPosition.top < window.innerHeight && sectionPosition.bottom > 0) {
      visibleSectionCount++;
    }
  }

  // Show/hide the fixed element based on the number of visible sections
  if (contentSectionPosition.top < window.innerHeight && contentSectionPosition.bottom > 0 && visibleSectionCount <= 1) {
    fixedElement.classList.remove('md:hidden');
  } else {
    fixedElement.classList.add('md:hidden');
  }
});

